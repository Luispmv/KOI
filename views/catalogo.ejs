<style>
     body{
        flex-direction: column;
        justify-content: center;
        height: 100vh;
    }
    .buttons-container{
        align-self: center;
        display: flex;
        justify-content: space-around;
        width: 60%;
    }
    nav{
        display: flex;
        justify-content: space-around;
        background-color: rgb(124 189 246);
        align-items: center;
        position: absolute;
        width: 100%;
    }
    .buttons-container a{
        width: 250px;
        height: 250px;
        -webkit-appearance: button;
        background-color: rgb(124 189 246);
        color: white;
        text-decoration: none;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }
    h2{
        color: white;
    }
    .user-info-container{
        display: flex;
        align-items: center;
        gap: 10px;
    }
    figure{
        width: 50px;
        height: 50px;
        background-color: white;
        border-radius: 100%;
        margin: 0;
        background-image: url(https://cdn-icons-png.freepik.com/512/9141/9141946.png);
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
    }
    .a-logout{
    width: 150px;
    background-color: white;
    color: rgb(69, 139, 200);
    text-decoration: none;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
}
main{
    height: 100vh;
    padding-top: 90px;
    display: grid;
    grid-template-columns: repeat(4,1fr);
    gap: 10px;
    width: 90%;
    margin: auto;
    column-gap: 45px;
}
.card{
    width: 100%;
    background-color: #7cbdf6;
    color: white;
    display: grid;
    justify-items: center;
    padding: 15px;
    gap: 10px;
    place-self: center;
    /* font-size: 10px; */
}
.card h3{
    font-size: 10px;
}
.card img{
    width: 100%;
}
.producto-info-btn{
    background: white;
    width: 90%;
    color: #7cbdf6;
    text-decoration: none;
    height: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
}

@media(max-width:625px){
    .btn-login{
        font-size: 7px;
        height: 20px;
        width: 90px;
    }
    .btn-register{
        font-size: 7px;
        height: 20px;
        width: 90px;
    }

    figure{
        width: 25px;
        height: 25px;
    }
    .a-logout{
        height: 20px;
        width: 90px;
        font-size: 7px;
    }
    main{
        grid-template-columns: repeat(2,1fr);
    }
}

</style>
